@model TpIntegradorDiuj.Models.Balance
@{
    ViewBag.Title = "Details";
}

<h2>Balance</h2>

<div class="jumbotron form-horizontal">
    <div class="form-group">
        <label>Empresa : @Model.Empresa.Nombre</label>
    </div>
    <div class="form-group">
        <label>Periodo : @Model.Periodo</label>
    </div>
    <div class="form-group">
        <h4>Cuentas</h4>
        <table class="table-bordered">
            <tr>
                <th>Nombre</th>
                <th>Valor</th>
            </tr>
            @foreach (var item in Model.Cuentas)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>$@item.Valor</td>
                </tr>
            }
        </table>
    </div>
</div>

