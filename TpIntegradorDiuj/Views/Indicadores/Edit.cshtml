@model TpIntegradorDiuj.Models.Indicador
@{
    ViewBag.Title = "Editar indicador";
}

<h2>Editar indicador</h2>
@using (Html.BeginForm("Edit", "Indicadores", FormMethod.Post))
{
    <div class="form-horizontal">
                @Html.HiddenFor(x => x.Id)
                @Html.HiddenFor(x => x.UsuarioCreador_Id)

        <div class="form-group">
            <label>Nombre</label>
            @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control", @required = true })
        </div>
        <div class="form-group">
            <label>Formula</label>
            @Html.TextBoxFor(x => x.Formula, new { @class = "form-control", @required = true, @Value = Model.Formula })
        </div>
        <input type="submit" value="Editar" class="btn btn-primary" />
    </div>
}

