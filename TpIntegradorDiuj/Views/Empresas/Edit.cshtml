@model TpIntegradorDiuj.Models.Empresa
@{
    ViewBag.Title = "Editar empresa";
}

<h2>Editar empresa</h2>
@using (Html.BeginForm("Edit", "Empresas", FormMethod.Post))
{
    <div class="form-horizontal">
        @Html.HiddenFor(x => x.CUIT)
        <div class="form-group">
            <label>Nombre</label>
            @Html.TextBoxFor(x=>x.Nombre,new { @class="form-control"})
        </div>
        <div class="form-group">
            <label>CUIT</label>
            @Html.TextBoxFor(x => x.CUIT, new { @class = "form-control",@disabled = true })
        </div>
        <div class="form-group">
            <label>Fecha de fundacion</label>
            @Html.TextBoxFor(x => x.FechaFundacion, new { @class = "form-control",@type="date",@required=true, @Value = Model.FechaFundacion.ToString("yyyy-MM-dd") })
        </div>
        <input type="submit" value="Editar" class="btn btn-primary" />
    </div>
}


